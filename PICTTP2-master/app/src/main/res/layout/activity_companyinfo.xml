<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".companyinfo"
    android:paddingLeft="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="145dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:src="@drawable/company" />

    <TextView
        android:id="@+id/request_compname"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="Description"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/request_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:textSize="20sp"
        android:inputType="textMultiLine"
        android:paddingLeft="14dp"
    />

    <TextView
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="CTC"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:paddingLeft="14dp"

        android:id="@+id/request_ctc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Role"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:paddingLeft="14dp"

        android:id="@+id/request_role"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:paddingLeft="14dp"

        android:id="@+id/request_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:textSize="20sp" />


    <TextView

        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="URL"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:paddingLeft="14dp"
        android:id="@+id/request_url"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:autoLink="web"
        android:linksClickable="true"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Requirements"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:paddingLeft="14dp"
        android:id="@+id/request_reg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:inputType="textMultiLine"
        android:textSize="20sp" />


    </LinearLayout>

</ScrollView>