<?xml version="1.0" encoding="utf-8"?>

<!--TO DO LIST
1-> INTENT UPDATE PROFILE BUTTON OF PERSONAL INFO TO SIGN UP FORM
2-> INTENT ADD DOCUMENTS BUTTON OF SIGN UP FORM TO PREVIOUS ADD DOCUMENTS
3-> BACKEND OF PERSONAL INFO
4-> (ON SUNDAY) COMPLETE SRS-->


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".studentinfo"

    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="206dp"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:paddingTop="30dp"
                android:src="@drawable/stud1" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorNavText"
                android:text="PERSONAL INFORMATION"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="27sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Student Name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_fullname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="MIS Number"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_mis"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Bio"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_bio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mobile Number"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_mobile"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mail ID"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_mail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorNavText"
                android:text="ACADEMIC INFORMATION"
                android:textAlignment="center"

                android:textColor="#ffff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:text="Engg. aggregate percentage"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_qualification"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Project"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_project"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Special skills"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_skills"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Language familiar"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_language"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="14dp"
                android:text="TextView"
                android:textSize="20sp" />
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:id="@+id/radio_"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="onRadioButtonClicked">
                <RadioButton
                    android:id="@+id/placed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="PLACED" />

                <RadioButton
                    android:id="@+id/not_placed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="NOT PLACED" />
            </RadioGroup>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VERIFY DOCUMENTS"
                android:layout_gravity="center"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:backgroundTint="#4e51a6"
                android:onClick="btn_verify"
                />




        </LinearLayout>


    </ScrollView>
</LinearLayout>